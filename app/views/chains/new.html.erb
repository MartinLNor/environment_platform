<h1>Créer une nouvelle filière</h1>

<%= simple_form_for @chain do |f| %>
<%= f.input :name %>
<%= f.input :risk, as: :radio_buttons, collection: [['Déchets Dangereux', 'DD'], ['Déchets Non Dangereux', 'DND']] %>
<%= f.input :photo %>
<%= f.input :photo_cache, as: :hidden %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
